
def validateCreditCard():
    ccNum=input('What is your credit Card#? ')
    CCNUM=ccNum[::-1]
    digits = [int(num) for num in CCNUM if num.isdigit()]
    total=0
    double = False
    for num1 in (digits):
     if double % 2 == 0:
        N=num1*2
        n=int(N)
        if n>9:
           n=n-9
        total+= n
        double= not double
       

    print (total)
validateCreditCard()

