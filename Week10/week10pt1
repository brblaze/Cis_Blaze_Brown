sentence=input("what sentence do you want to use ") 
def word_frequency(sentence):
    #splits the sentence 
    words= sentence.split()
    mydict={}
    for word in words:
        #main promblem was it was counting word in words instead of it counting in the dictinary 
        if word in mydict:
            mydict[word] += 1
        else: 
            mydict[word]=1
            #end statement 
        print(mydict)
word_frequency(sentence)